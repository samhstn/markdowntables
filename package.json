{
  "name": "markdowntables",
  "version": "1.0.0",
  "description": "Create, Edit and Format your markdown tables",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/samhstn/markdowntables.git"
  },
  "main": "index.js",
  "scripts": {
    "start": "npm run build && concurrently npm:start:* npm:serve",
    "start:elm": "elm-live src/Main.elm -- --output src/elm.js",
    "start:js": "watchify src/index.js --o public/index.js",
    "serve": "http-server",
    "build": "npm run build:elm && npm run build:js",
    "build:elm": "elm make src/Main.elm --output src/elm.js --optimize",
    "build:js": "browserify src/index.js --o public/index.js",
    "format": "elm-format src tests --yes",
    "format:validate": "elm-format src --validate",
    "test": "elm-test",
    "test:watch": "npm run test -- --watch"
  },
  "keywords": [
    "markdown",
    "tables",
    "converter"
  ],
  "author": "samhstn",
  "license": "ISC",
  "dependencies": {
    "elm": "^0.19.0-bugfix6",
    "browserify": "^16.2.3"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "elm-format": "^0.8.1",
    "elm-live": "^3.4.0",
    "http-server": "^0.11.1",
    "nodemon": "^1.18.10",
    "watchify": "^3.11.1"
  }
}
